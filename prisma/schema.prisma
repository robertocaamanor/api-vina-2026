generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Day {
  id           Int           @id @default(autoincrement())
  date         DateTime      @unique
  name         String?       @map("name_of_day") // Optional human-readable name like "Noche Cero", etc.
  acts         Act[]
  competitors  DayCompetitor[]
}

enum ActType {
  ARTIST
  HUMORIST
}

model Act {
  id               Int     @id @default(autoincrement())
  name             String
  type             ActType
  hasSilverSeagull Boolean @default(false)
  hasGoldSeagull   Boolean @default(false)
  
  dayId            Int
  day              Day     @relation(fields: [dayId], references: [id], onDelete: Cascade)
}

model CompetitionCategory {
  id          Int          @id @default(autoincrement()) // 1 = International, 2 = Folkloric
  name        String       @unique
  competitors Competitor[]
}

model Competitor {
  id         Int                 @id @default(autoincrement())
  participant String
  song        String
  country     String
  
  categoryId  Int
  category    CompetitionCategory @relation(fields: [categoryId], references: [id])
  
  days        DayCompetitor[]
}

// Tabla relacional expl√≠cita (Join Table) entre Days y Competitors
model DayCompetitor {
  id           Int        @id @default(autoincrement())
  dayId        Int
  day          Day        @relation(fields: [dayId], references: [id], onDelete: Cascade)
  competitorId Int
  competitor   Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade)

  @@unique([dayId, competitorId])
}
